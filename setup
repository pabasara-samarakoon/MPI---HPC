#include <iostream>
/*function definition*/
void half_of(float a, float* half) {
	*half = a / 2;
}


int main()
{
	float a = 5, ha;
	half_of(a, &ha);
	printf("Half of %f is %f \n", a, ha);

}
C:\Users\iotuser\source\repos\MPIproject1\x64\Debug>mpiexec .\MPIproject1.exe
Half of 5.000000 is 2.500000

=========================================
#include <iostream>
/*function definition*/
void add(int a, int b, int* sum) {
	*sum = a + b;
}

int main()
{
	int a = 10, b = 5, result;
	add(a, b, &result);
	printf("sum of %d and %d is %d \n", a, b, result);
	
}
----------------
C:\Users\iotuser\source\repos\MPIproject1\x64\Debug>mpiexec .\MPIproject1.exe
sum of 10 and 5 is 15
=========================================

#include <iostream>
/*function definition*/
void add(int* a, int b) {
	*a = *a + b;
}

int main()
{
	int x = 10, y = 5, result;
	add( &x , y);
	printf("sum is %d \n", x);
	
}
--------------
C:\Users\iotuser\source\repos\MPIproject1\x64\Debug>mpiexec .\MPIproject1.exe
sum is 15
